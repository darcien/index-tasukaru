{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2015", "ES2016", "ES2017", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2015"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib", "__tests__"]
}
